.container{
  height: 100vh;
  background-color: rgb(230, 229, 209);
  display: flex;
  flex-direction: column;
}
.listGroup{
  background-color: white;
  margin: 15rpx 10rpx;
}
.listItem{
  display: flex;
  flex-direction: row;
  align-items: center;
  border: rgb(45, 249, 245) 2rpx solid;
  padding: 10rpx;
}
.listItem image{
  width: 80rpx;
  height: 80rpx;
  margin: 0 15rpx;
}
.listItem text{
  font-size: 35rpx;
  /*扩张因子，扩张此组件*/
  flex-grow: 1;
}