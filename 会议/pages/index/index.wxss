.box{
  border: 2px solid #00CED1;
  color: #00CED1;
  margin: 15rpx;
  padding: 15rpx;
}
.title{
  font-size: 15pt;
  font-weight: bold;
  padding-bottom: 10rpx;
  border-bottom: 2rpx dashed #00CED1;
}
.content{
  font-size: 12pt;
  margin: 10rpx 0;
  line-height: 80rpx;
}
.bar{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 16pt;
  border-bottom: 2rpx dashed	#00CED1;
}
.avatar{
  width: 150rpx;
  height: 150rpx;
  margin-right: 40rpx;
}
map{
  width: 100%;
  height: 400rpx;
  margin-bottom: 10rpx;
}